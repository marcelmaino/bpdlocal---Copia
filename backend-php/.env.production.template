# ========================================
# CONFIGURAÇÕES CORS
# ========================================

# Domínios permitidos para CORS (separados por vírgula)
# Exemplo: https://bpd.marcelmaino.com.br,https://www.bpd.marcelmaino.com.br
CORS_ORIGIN=https://bpd.marcelmaino.com.br

# Métodos HTTP permitidos
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Headers permitidos
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# Permitir credenciais
CORS_CREDENTIALS=true

# ========================================
# CONFIGURAÇÕES DE EMAIL (SE NECESSÁRIO)
# ========================================

# Configurações SMTP para envio de emails
MAIL_HOST=smtp.seuservidor.com
MAIL_PORT=587
MAIL_USERNAME=noreply@bpd.marcelmaino.com.br
MAIL_PASSWORD=senha_do_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@bpd.marcelmaino.com.br
MAIL_FROM_NAME="BPD Dashboard"

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================

# Nível de log (error, warning, info, debug)
LOG_LEVEL=error

# Caminho para arquivos de log
LOG_PATH=/path/to/logs

# Tamanho máximo do arquivo de log em MB
LOG_MAX_SIZE=10

# Número máximo de arquivos de log para manter
LOG_MAX_FILES=5

# ========================================
# CONFIGURAÇÕES DE CACHE (SE NECESSÁRIO)
# ========================================

# Driver de cache (file, redis, memcached)
CACHE_DRIVER=file

# Configurações Redis (se usando)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Tempo padrão de cache em segundos
CACHE_TTL=3600

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================

# Número máximo de requisições por minuto por IP
RATE_LIMIT_REQUESTS=60

# Tempo de bloqueio em segundos após exceder o limite
RATE_LIMIT_BLOCK_TIME=300

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================

# Diretório para backups automáticos
BACKUP_PATH=/path/to/backups

# Frequência de backup em horas
BACKUP_FREQUENCY=24

# Número de backups para manter
BACKUP_KEEP=7

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================

# URL para webhook de monitoramento (opcional)
MONITORING_WEBHOOK=

# Chave de API para serviços de monitoramento
MONITORING_API_KEY=

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS DO BPD
# ========================================

# Configurações específicas da aplicação BPD
BPD_DEFAULT_TIMEZONE=America/Sao_Paulo
BPD_DATE_FORMAT=Y-m-d H:i:s
BPD_CURRENCY=BRL
BPD_LOCALE=pt_BR

# Limites de dados
BPD_MAX_RECORDS_PER_PAGE=100
BPD_MAX_EXPORT_RECORDS=10000

# ========================================
# CONFIGURAÇÕES DE TERCEIROS (SE NECESSÁRIO)
# ========================================

# APIs externas
EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# Serviços de analytics
GOOGLE_ANALYTICS_ID=

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
